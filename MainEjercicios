package com.cice.ejercicios;

public class MainEjercicio02 {

	public static void main(String[] args) {
		
	// 2 - Presentar en consola las tablas de multiplicar del 1 al 10, como se 
	//muestra en la imagen.

		for(int tab = 1; tab<=10; tab++){
			System.out.println("      ");
			System.out.println("Tabla del " + tab);
			System.out.println("-----------");
			for(int num = 1; num<=10; num++){
				System.out.println(tab +" x "+ num + " = "+ tab * num);
			}		
		}
	}
}
